{
    "php.version": "8.5",
    "composer.executablePath": "/usr/bin/composer",
    "files.watcherExclude": {
        "**/vendor/**": true,
        "**/node_modules/**": true
    },
    "files.associations": {
        "*.php": "php"
    },
    "task.autoDetect": "off", // Optional: prevents conflicts with other tasks
}