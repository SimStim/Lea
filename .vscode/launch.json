{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Listen for Xdebug", // Your existing one â€” keep for web if needed
      "type": "php",
      "request": "launch",
      "port": 9004,
      "pathMappings": {
        "/home/Ed/Nextcloud-Logophilia/Logophilia.eu/Lea": "${workspaceFolder}"
      }
    },
    {
      "name": "Debug Current PHP Script (CLI)",
      "type": "php",
      "request": "launch",
      "program": "${file}",
      "cwd": "${fileDirname}",
      "port": 9004, // Changed here too
      "runtimeArgs": [
        "-dxdebug.mode=debug",
        "-dxdebug.start_with_request=yes"
      ],
      "env": {
        "XDEBUG_MODE": "debug",
        "XDEBUG_CONFIG": "client_port=9004" // Match the new port
      }
    }
  ]
}